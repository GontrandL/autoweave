# AutoWeave Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# API Keys (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative AI Providers
OPENROUTER_API_KEY=your_openrouter_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Integration
GITHUB_TOKEN=your_github_token_here

# kagent Configuration
KAGENT_NAMESPACE=default
KAGENT_TIMEOUT=30000
KAGENT_RETRY_ATTEMPTS=3

# Kubernetes Configuration
KUBECONFIG=~/.kube/config
K8S_CLUSTER_NAME=autoweave
K8S_IN_CLUSTER=false

# Optional: Custom MCP Servers
MCP_DISCOVERY_ENABLED=true
MCP_REGISTRY_URL=http://localhost:8082

# Memory System Configuration
# mem0 (Contextual Memory)
MEM0_API_KEY=your_mem0_api_key_here
MEM0_BASE_URL=https://api.mem0.ai
MEM0_MOCK=false

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=autoweave
QDRANT_MOCK=false

# Memgraph Graph Database
MEMGRAPH_HOST=localhost
MEMGRAPH_PORT=7687
MEMGRAPH_USER=admin
MEMGRAPH_PASSWORD=admin123!
MEMGRAPH_DATABASE=memgraph
MEMGRAPH_MOCK=false

# Hybrid Memory Configuration
MEMORY_FUSION_WEIGHT=0.5
MEMORY_CACHE_SIZE=1000
MEMORY_CACHE_TTL=3600000
MEMORY_SEARCH_LIMIT=10

# Redis ML Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_KEY_PREFIX=autoweave:
REDIS_ML_ENABLED=true

# Production Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
SECURITY_SERVICE_URL=your_security_service_url_here
SECURITY_SERVICE_TOKEN=your_security_token_here

# Intelligence Agents Configuration
AUTO_DEPLOY_AGENTS=true
INTELLIGENCE_LEVEL=advanced
PATTERN_RECOGNITION=true
CACHE_WARMING=true

# MCP and ANP Configuration
MCP_PORT=3002
ANP_PORT=8083
EXTERNAL_ANP_REGISTRIES=https://registry.anp.dev

# Performance Configuration
PERFORMANCE_MONITORING=true
AUTO_OPTIMIZATION=true
ML_CACHE_WARMING=true
PREDICTIVE_SCALING=true