# AutoWeave Configuration - Example Environment File
# Copy this file to .env and fill in your actual values

# Basic Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-proj-your-openai-key-here
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here

# GitHub Integration
GITHUB_TOKEN=ghp_your-github-token-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Memory System
MEM0_SELF_HOSTED=true
QDRANT_HOST=localhost
QDRANT_PORT=6333
MEMGRAPH_HOST=localhost
MEMGRAPH_PORT=7687
MEMGRAPH_USER=
MEMGRAPH_PASSWORD=

# kagent Configuration
KAGENT_NAMESPACE=default
KAGENT_TIMEOUT=30000
KAGENT_RETRY_ATTEMPTS=3

# Monitoring & Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=autoweave
OTEL_RESOURCE_ATTRIBUTES=service.name=autoweave,service.version=1.0.0

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Development Settings
CLAUDE_API_KEY=your-claude-api-key-here
DEVELOPMENT_MODE=true
VERBOSE_LOGGING=false