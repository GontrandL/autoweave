{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    },
    {
      "name": "alpha",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": false },
          { "breaking": true, "release": "major" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "ðŸš€ Features" },
            { "type": "fix", "section": "ðŸ› Bug Fixes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "revert", "section": "âª Reverts" },
            { "type": "refactor", "section": "ðŸ”¨ Code Refactoring" },
            { "type": "security", "section": "ðŸ”’ Security" },
            { "type": "build", "section": "ðŸ“¦ Build System" },
            { "type": "docs", "section": "ðŸ“ Documentation", "hidden": false }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# AutoWeave Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false,
        "tarballDir": "dist"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "echo 'Verifying release conditions...'",
        "prepareCmd": "pnpm build && echo 'Build completed for version ${nextRelease.version}'",
        "publishCmd": "echo 'Publishing version ${nextRelease.version}' && docker buildx build --platform linux/amd64,linux/arm64 -t autoweave:${nextRelease.version} --push . || echo 'Docker build failed, continuing...'"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.tgz",
            "label": "NPM Distribution Package"
          },
          {
            "path": "CHANGELOG.md",
            "label": "Changelog"
          }
        ],
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} which has been released! ðŸŽ‰\n\nThe release is available on:\n- [GitHub Releases](${releases.filter(release => release.name === 'GitHub')[0].url})\n- [Container Registry](https://github.com/autoweave/autoweave/pkgs/container/autoweave)\n\nYour **${issue.pull_request ? 'pull request' : 'issue'}** is now live! âœ¨",
        "failComment": false,
        "releasedLabels": ["released<%= nextRelease.channel ? `-${nextRelease.channel}` : \"\" %>"],
        "addReleases": "bottom"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json", "pnpm-lock.yaml"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ],
  "tagFormat": "v${version}",
  "ci": true,
  "debug": false,
  "dryRun": false
}