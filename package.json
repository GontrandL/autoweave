{
  "name": "autoweave",
  "version": "1.0.0",
  "private": true,
  "description": "The Self-Weaving Agent Orchestrator with AI Intelligence - Monorepo Root",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=\"@autoweave/*\"",
    "build:apps": "turbo run build --filter=\"admin-ui\" --filter=\"dev-studio\" --filter=\"user-ui\"",
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=\"admin-ui\"",
    "dev:studio": "turbo run dev --filter=\"dev-studio\"",
    "dev:user": "turbo run dev --filter=\"user-ui\"",
    "start:admin": "cd apps/admin-ui && pnpm start",
    "start:studio": "cd apps/dev-studio && pnpm start",
    "start:user": "cd apps/user-ui && pnpm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:api": "playwright test --project=api-tests",
    "test:e2e:workflows": "playwright test --project=workflow-tests",
    "test:e2e:frontend": "playwright test --project=admin-ui --project=dev-studio --project=user-ui",
    "test:e2e:mobile": "playwright test --project=admin-ui-mobile --project=dev-studio-mobile --project=user-ui-mobile",
    "test:packages": "turbo run test",
    "test:performance": "jest tests/performance --detectOpenHandles --forceExit",
    "test:load": "k6 run tests/load/autoweave-load-test.js",
    "start:test": "cross-env NODE_ENV=test pnpm run build && pnpm run start",
    "start:prod": "cross-env NODE_ENV=production pnpm run build && pnpm run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lighthouse:ci": "lhci autorun",
    "docker:build": "docker-compose -f docker-compose.frontend.yml build",
    "docker:up": "docker-compose -f docker-compose.frontend.yml up",
    "docker:down": "docker-compose -f docker-compose.frontend.yml down",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "semantic-release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "security:scan": "npm audit",
    "security:codeql": "bash scripts/run-codeql.sh",
    "security:full": "npm run security:scan && npm run security:codeql",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches",
    "prepare": "husky install",
    "setup": "bash scripts/setup/setup-kagent.sh",
    "setup-kagent": "bash scripts/setup/setup-kagent.sh",
    "setup-appsmith": "bash scripts/setup/setup-appsmith.sh",
    "setup-integration-agent": "bash scripts/setup/setup-integration-agent.sh",
    "health": "bash scripts/dev/health-check.sh",
    "create-agent": "node packages/cli/src/create-agent.js",
    "analyze": "node scripts/analyze-bundle.js",
    "analyze:build": "pnpm run build && node scripts/analyze-bundle.js",
    "analyze:ci": "node scripts/analyze-bundle.js",
    "deploy-agent": "bash scripts/deploy-agent.sh",
    "dev:cluster": "kind create cluster --name autoweave && kagent install",
    "dev:clean": "bash scripts/cleanup/cleanup-test-resources.sh",
    "dev:ui": "kubectl port-forward -n kagent-system svc/kagent-ui 8080:80",
    "dev:appsmith": "kubectl port-forward -n appsmith-system svc/appsmith-appsmith 80:80",
    "appsmith:logs": "kubectl logs -f -n appsmith-system -l app.kubernetes.io/instance=appsmith",
    "appsmith:status": "kubectl get pods -n appsmith-system -l app.kubernetes.io/instance=appsmith",
    "startup": "./start-autoweave.sh",
    "startup:windows": "start-autoweave.bat",
    "install-shortcut": "./create-desktop-shortcut.sh"
  },
  "keywords": [
    "kubernetes",
    "agents",
    "kagent",
    "automation",
    "orchestration",
    "ai",
    "openai",
    "monorepo",
    "turborepo"
  ],
  "author": "AutoWeave Team",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.3",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@size-limit/file": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "c8": "^10.1.3",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nock": "^14.0.5",
    "prettier": "^3.2.5",
    "semantic-release": "^22.0.12",
    "size-limit": "^11.2.0",
    "supertest": "^7.1.3",
    "syncpack": "^12.3.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "turbo": "^1.13.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.5",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autoweave/autoweave.git"
  },
  "bugs": {
    "url": "https://github.com/autoweave/autoweave/issues"
  },
  "homepage": "https://github.com/autoweave/autoweave#readme",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chokidar": "^4.0.3",
    "ioredis": "^5.3.2",
    "usb": "^2.11.0"
  }
}
