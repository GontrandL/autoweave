{
  "name": "autoweave",
  "version": "1.0.0",
  "private": true,
  "description": "The Self-Weaving Agent Orchestrator with AI Intelligence - Monorepo Root",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration", 
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "security:scan": "npm audit && snyk test",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches",
    "prepare": "husky install",
    "setup": "bash scripts/setup/setup-kagent.sh",
    "setup-kagent": "bash scripts/setup/setup-kagent.sh",
    "setup-appsmith": "bash scripts/setup/setup-appsmith.sh",
    "setup-integration-agent": "bash scripts/setup/setup-integration-agent.sh",
    "health": "bash scripts/dev/health-check.sh",
    "create-agent": "node packages/cli/src/create-agent.js",
    "deploy-agent": "bash scripts/deploy-agent.sh",
    "dev:cluster": "kind create cluster --name autoweave && kagent install",
    "dev:clean": "bash scripts/cleanup/cleanup-test-resources.sh",
    "dev:ui": "kubectl port-forward -n kagent-system svc/kagent-ui 8080:80",
    "dev:appsmith": "kubectl port-forward -n appsmith-system svc/appsmith-appsmith 80:80",
    "appsmith:logs": "kubectl logs -f -n appsmith-system -l app.kubernetes.io/instance=appsmith",
    "appsmith:status": "kubectl get pods -n appsmith-system -l app.kubernetes.io/instance=appsmith",
    "startup": "./start-autoweave.sh",
    "startup:windows": "start-autoweave.bat",
    "install-shortcut": "./create-desktop-shortcut.sh"
  },
  "keywords": [
    "kubernetes",
    "agents",
    "kagent",
    "automation",
    "orchestration",
    "ai",
    "openai",
    "monorepo",
    "turborepo"
  ],
  "author": "AutoWeave Team",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.5",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autoweave/autoweave.git"
  },
  "bugs": {
    "url": "https://github.com/autoweave/autoweave/issues"
  },
  "homepage": "https://github.com/autoweave/autoweave#readme"
}
