{
  "name": "@autoweave/plugin-loader",
  "version": "1.0.0",
  "description": "AutoWeave plugin loader with hot-swap and Worker Thread isolation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@autoweave/observability": "workspace:*",
    "chokidar": "^3.5.3",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "ioredis": "^5.3.2",
    "vm2": "^3.9.19",
    "lru-cache": "^10.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "plugin",
    "loader",
    "hot-swap",
    "worker-threads",
    "autoweave"
  ],
  "author": "AutoWeave Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autoweave/autoweave.git",
    "directory": "packages/plugin-loader"
  }
}
